
<div class=" panel panel-default">
  <div class="panel-body">
      <div class="row">
      <div class="col-md-7">
        <div class="table-responsive">
          <table class="table">

            <tbody>
              <tr>
                <td><strong>Image</strong></td>
                <td><%= image_tag(@movie.image.url(:medium)) -%></td>
              </tr>

              <tr>
                <td><strong>Title</strong></td>
                <td><%= @movie.title %></td>
              </tr>
              <tr>
                <td><strong>Description</strong></td>
                <td><%= @movie.description %></td>
              </tr>
              <tr>
                <td><strong>Movie length</strong></td>
                <td><%= @movie.movie_length %></td>
              </tr>
              <tr>
                <td><strong>Director</strong></td>
                <td><%= @movie.director %></td>
              </tr>
              <tr>
                <td><strong>Ratting</strong></td>
                <td><%= @movie.ratting %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <div class="col-md-5 col-md-ofsset-1">
        <h1 class="review_title"><%= @movie.title %></h1>
        <p><%= @movie.description %></p>

        <% if @reviews.blank? %>
          <h3>no review  just yet, would you like to add first! </h3>
            <%= link_to"write reviews", new_movie_review_path(@movie), class:"btn btn-danger"  %>
        <% else %>
          <% @reviews.each do|review| %>
            <div class="reviews">
              <p> <%= review.id %> </p>
              <p> <%= review.rating %> </p>
              <p> <%= review.comment %> </p>
            </div>
            <%end%>
        <%end%>

<!-- This is the data ===>>>>> <%  @reviews.count  %>
<br>
This is the data ===>>>>> <%=  @reviews.count  %>
 --> 
      </div>
    </div>
  </div>
</div>
<button type="button" class="btn btn-outline-primary">
  <%= link_to "Edit", edit_movie_path(@movie) %>
</button> |
<button type="button" class="btn btn-outline-secondary">
  <%= link_to "Destroy", @movie, method: :delete %>
</button> |
<button type="button" class="btn btn-outline-secondary">
  <%= link_to "Back ", movies_path %>
</button> |
<button type="button" class="btn btn-outline-secondary">
  <%= link_to "write a Review", new_movie_review_path(@movie) %> 
</button>